<div class="form-container">
    <h2>✏️ Редактировать службу</h2>
    
    <% if @errors %>
        <div class="flash error">
            <% @errors.each do |error| %>
                <p><%= error %></p>
            <% end %>
        </div>
    <% end %>
    
    <form method="post" action="/services/<%= @service.id %>/update">
        <div class="form-group">
            <label for="name">Название службы:</label>
            <input type="text" id="name" name="name" value="<%= @service.name %>" required>
        </div>
        
        <div class="form-group">
            <label for="project_path">Путь к проекту:</label>
            <input type="text" id="project_path" name="project_path" value="<%= @service.project_path %>" required>
            <small>Полный путь к папке с проектом</small>
        </div>
        
        <div class="form-group">
            <label for="command">Команда запуска:</label>
            <input type="text" id="command" name="command" value="<%= @service.command %>" required>
            <small>Команда которая выполнится в папке проекта</small>
        </div>
        
        <div class="form-group">
            <label for="description">Описание:</label>
            <input type="text" id="description" name="description" value="<%= @service.description %>">
        </div>
        
        <div class="form-group">
            <label for="port">Порт:</label>
            <input type="number" id="port" name="port" value="<%= @service.port %>">
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-edit">Обновить службу</button>
            <a href="/" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>