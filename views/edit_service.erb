<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="bi bi-pencil"></i> Редактировать службу
                </h4>
            </div>
            <div class="card-body">
                <% if @errors %>
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">Ошибки:</h5>
                        <ul class="mb-0">
                            <% @errors.each do |error| %>
                                <li><%= error %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                
                <form method="post" action="/services/<%= @service.id %>/update">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Название службы *</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= @service.name %>" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="port" class="form-label">Порт</label>
                            <input type="number" class="form-control" id="port" name="port" 
                                   value="<%= @service.port %>">
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="project_path" class="form-label">Путь к проекту *</label>
                        <input type="text" class="form-control" id="project_path" name="project_path" 
                               value="<%= @service.project_path %>" required>
                        <div class="form-text">Полный путь к папке с проектом</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="command" class="form-label">Команда запуска *</label>
                        <input type="text" class="form-control" id="command" name="command" 
                               value="<%= @service.command %>" required>
                        <div class="form-text">Команда которая выполнится в папке проекта</div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Описание</label>
                        <textarea class="form-control" id="description" name="description" rows="2"><%= @service.description %></textarea>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/" class="btn btn-secondary me-md-2">Отмена</a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Обновить службу
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>