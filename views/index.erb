<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="bi bi-server"></i> Мои службы
        </h2>
        <p class="text-muted mb-0">Управление запущенными службами и приложениями</p>
    </div>
    <a href="/services/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить службу
    </a>
</div>

<% if @services.empty? %>
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="bi bi-inboxes display-1 text-muted"></i>
        </div>
        <h3 class="text-muted">Нет добавленных служб</h3>
        <p class="text-muted mb-4">Добавьте первую службу чтобы начать работу</p>
        <a href="/services/new" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Добавить первую службу
        </a>
    </div>
<% else %>
    <!-- Статистика -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0"><%= @services.count %></h4>
                            <small>Всего служб</small>
                        </div>
                        <i class="bi bi-collection display-6 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0"><%= @services.where(status: 'running').count %></h4>
                            <small>Запущено</small>
                        </div>
                        <i class="bi bi-play-circle display-6 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0"><%= @services.where(status: 'stopped').count %></h4>
                            <small>Остановлено</small>
                        </div>
                        <i class="bi bi-stop-circle display-6 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0"><%= @services.where(status: 'error').count %></h4>
                            <small>Ошибки</small>
                        </div>
                        <i class="bi bi-exclamation-triangle display-6 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Список служб -->
    <div class="row">
        <% @services.each do |service| %>
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card service-card h-100 <%= service.status %>">
                    <div class="card-body">
                        <!-- Заголовок карточки -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-gear"></i> <%= service.name %>
                            </h5>
                            <span class="badge <%= service.status == 'running' ? 'bg-success' : 'bg-danger' %> status-badge">
                                <%= service.status == 'running' ? 'Запущена' : 'Остановлена' %>
                            </span>
                        </div>

                        <!-- Информация о службе -->
                        <div class="mb-3">
                            <% if service.description.present? %>
                                <div class="info-row">
                                    <small class="text-muted">Описание:</small>
                                    <div><%= service.description %></div>
                                </div>
                            <% end %>
                            
                            <div class="info-row">
                                <small class="text-muted">Команда:</small>
                                <div class="command-text mt-1"><%= service.command %></div>
                            </div>
                            
                            <div class="info-row">
                                <small class="text-muted">Путь:</small>
                                <div><code class="text-truncate d-block"><%= service.project_path %></code></div>
                            </div>
                            
                            <% if service.port.present? %>
                                <div class="info-row">
                                    <small class="text-muted">Порт:</small>
                                    <div><span class="badge bg-info"><%= service.port %></span></div>
                                </div>
                            <% end %>
                            
                            <% if service.pid %>
                                <div class="info-row">
                                    <small class="text-muted">PID:</small>
                                    <div><code><%= service.pid %></code></div>
                                </div>
                            <% end %>
                            
                            <% if service.last_started %>
                                <div class="info-row">
                                    <small class="text-muted">Запущена:</small>
                                    <div><small><%= service.last_started.localtime.strftime('%d.%m.%Y %H:%M') %></small></div>
                                </div>
                            <% end %>
                        </div>

                        <!-- Действия -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <% if service.status == 'stopped' %>
                                <form action="/services/<%= service.id %>/start" method="post" class="me-md-1 flex-fill">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-play-circle"></i> Запустить
                                    </button>
                                </form>
                            <% else %>
                                <form action="/services/<%= service.id %>/stop" method="post" class="me-md-1 flex-fill">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-stop-circle"></i> Остановить
                                    </button>
                                </form>
                            <% end %>
                            
                            <div class="btn-group flex-fill">
                                <a href="/services/<%= service.id %>/logs" class="btn btn-outline-primary">
                                    <i class="bi bi-text-paragraph"></i>
                                </a>
                                <a href="/services/<%= service.id %>/edit" class="btn btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="/services/<%= service.id %>/delete" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>